<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ metadata.title }}">
    <meta property="og:url" content="{{ metadata.url + page.url.slice(1) }}">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">

    <meta property="twitter:card" content="summary">
    <meta property="twitter:url" content="{{ metadata.url + page.url.slice(1) }}">
    <meta property="twitter:title" content="{{ title or metadata.title }}">
    <meta property="twitter:description" content="{{ description or metadata.description }}">

    <link rel="icon" type="image/png" href="/assets/favicon/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/assets/favicon/favicon.svg" />
<link rel="shortcut icon" href="/assets/favicon/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png" />
<link rel="manifest" href="/assets/favicon/site.webmanifest" />
  </head>
  <body>
    <div class="video-bg-wrapper">
      <video autoplay muted loop playsinline class="video-bg">
        <source src="/assets/video-bg.webm" type="video/webm">
        <source src="/assets/video-bg.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
    <header>
      {%- for entry in metadata.nav %}
        <span class="{% if entry.url == page.url %} active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a>{% if not loop.last %} - {% endif %}</span>
      {%- endfor %}
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
<footer class="sticky-footer">
	<img src="/img/logo.png" alt="Logo" class="footer-logo" />
	<span>Â©<span id="footer-year"></span> SATS</span>
</footer><script src="/js/year.js"></script>

  </body>


  
</html>
